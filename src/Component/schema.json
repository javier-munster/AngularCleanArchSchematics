{
    "$schema": "http://json-schema.org/schema",
    "$id": "Component",
    "title": "Component Options",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the Component"
        },
        "feature": {
            "type": "string",
            "description": "The name of the feature this Component belongs to"
        },
        "style": {
            "type": "string",
            "description": "The style file extension to use",
            "enum": ["css", "scss"],
            "default": "scss"
        }
    },
    "required": ["name", "feature"]
}
