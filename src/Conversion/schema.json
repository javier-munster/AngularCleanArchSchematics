{
    "$schema": "http://json-schema.org/schema",
    "$id": "Conversion",
    "title": "Conversion Options",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the Conversion"
        },
        "feature": {
            "type": "string",
            "description": "The name of the feature this Conversion belongs to"
        },
        "flat": {
            "type": "boolean",
            "description": "Does not create a separate directory for the Conversion if true",
            "default": false
        }
    },
    "required": ["name", "feature"]
}
