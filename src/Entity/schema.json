{
    "$schema": "http://json-schema.org/schema",
    "$id": "Entity",
    "title": "Entity Options",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the Entity"
        },
        "feature": {
            "type": "string",
            "description": "The name of the feature this Entity belongs to"
        },
        "flat": {
            "type": "boolean",
            "description": "Does not create a separate directory for the Entity if true",
            "default": false
        }
    },
    "required": ["name", "feature"]
}
