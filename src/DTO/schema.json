{
    "$schema": "http://json-schema.org/schema",
    "$id": "DTO",
    "title": "Data Transfer Object Options",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the DTO"
        },
        "feature": {
            "type": "string",
            "description": "The name of the feature this DTO belongs to"
        },
        "flat": {
            "type": "boolean",
            "description": "Does not create a separate directory for the DTO if true",
            "default": false
        }

    },
    "required": ["name", "feature"]
}
