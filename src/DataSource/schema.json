{
    "$schema": "http://json-schema.org/schema",
    "$id": "DataSource",
    "title": "DataSource Options",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the DataSource"
        },
        "feature": {
            "type": "string",
            "description": "The name of the feature this DataSource belongs to"
        },
        "flat": {
            "type": "boolean",
            "description": "Does not create a separate directory for the DataSource if true",
            "default": false
        }
    },
    "required": ["name", "feature"]
}
